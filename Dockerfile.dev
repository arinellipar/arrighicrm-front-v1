FROM node:18-alpine

WORKDIR /app

# Copiar arquivos de dependências
COPY package*.json ./
COPY pnpm-lock.yaml ./

# Instalar dependências
RUN npm install -g pnpm
RUN pnpm install

# Copiar código fonte
COPY . .

# Expor porta
EXPOSE 3000

# Comando para executar em desenvolvimento
CMD ["pnpm", "run", "dev"]